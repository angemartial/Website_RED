{% extends 'admin/baseAdmin.html.twig' %}

{% block title %} Ads Dashboard!{% endblock %}

{% block body %}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body py-2">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h1 text-white d-inline-block mb-0">Actualités</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="{{ path ('admin_dashboard') }}">Tableau de bord</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Actualités</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral">Filtre</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-12 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">Créer une annonce</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <h2>Détail de l'annonce</h2>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-6">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(form.slug) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    {{ form_row(form.introduction) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(form.filename) }}
                                </div>
                            </div>
                        </div>
                        <hr class="my-4" />
                        <!-- Address -->
                        <h6 class="heading-small text-muted mb-4">Contenu de l'articles</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-city">Catégories</label>
                                        <input type="text" id="input-category" class="form-control" placeholder="Category" value="Droit">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-country">Tags</label>
                                        <input type="text" id="input-tag" class="form-control" placeholder="Tags" value="Méthodologie">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-country">Publié</label>
                                        <input type="number" id="input-publication" class="form-control" placeholder="En attente">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4" />
                        <!-- Description -->
                        <h6 class="heading-small text-muted mb-4"></h6>
                        <div class="pl-lg-4">
                            {{ form_row(form.content) }}
                        </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary float-right">
                            <i class="fa fa-check"></i>Créer une nouvelle annonce</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


    {% endblock %}
