<div class="container">
    <h1 class="my-5">Crée une nouvelle annonce</h1>

    {{ form_start(form) }}

    <div class="row">

        <div class="col">
            <div class="alert alert-light">
                <h2>Détail de l'annonce</h2>
                <hr>
                {{ form_row(form.title) }}
                {{ form_row(form.slug) }}
                <hr>
                {{ form_row(form.introduction) }}

            </div>
        </div>

        <div class="col">

            <div class="alert alert-light">
                <h2>Images de l'annonce</h2>
                <hr>

                {{ form_row(form.filename) }}

            </div>
        </div>
    </div>


    <div class="alert alert-success clearfix">
        {{ form_row(form.content) }}

        <button type="submit" class="btn btn-primary float-right">
            <i class="fa fa-check"></i>Créer une nouvelle annonce</button>
    </div>


    {{ form_end(form) }}

</div>