{% extends 'base.html.twig' %}

{% block title %} Connexion au site!{% endblock %}

{% block content %}

    <!-- Start Page Title Area -->
    <div class="page-title">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <h3>Connexion</h3>
                            <ul>
                                <li><a href="{{ path('homepage') }}">Accueil</a></li>
                                <li>/</li>
                                <li>Connexion</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->

    <!-- Start Login Area -->
    <section class="login-area ptb-80">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="login-content">
                        <h3>Connectez vous !</h3>
                        {% if hasError %}
                            <div class="alert alert-warning">Le nom utilisateur ou le mot de passe est invalide</div>

                        {% endif %}
                        <ul>
                            <li><a href="#" class="facebook"><i class="fa fa-facebook-official"></i> Facebook</a></li>
                            <li><a href="#" class="google-plus"><i class="fa fa-google-plus-square"></i> Google Plus</a></li>
                        </ul>
                        <form action="{{ path('account_login') }}" method="post">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="_username" id="email" placeholder="Email" required value= "{{ username }}">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <input type="password" name="_password" id="password" class="form-control" placeholder="Entrez un mot de passe" required>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <button class="btn btn-primary" type="submit">Se connecter</button>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <p><a href="#">Nom utilisateur / Mot de passe oublié</a></p>
                                </div>
                            </div>
                        </form>
                        <h4>Pas encore inscrit? <a href="register.html">Créer un compte</a></h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Login Area -->
{% endblock %}